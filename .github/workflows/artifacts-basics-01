name: Generate 'hi' artifact

on:
  workflow_dispatch:

jobs:
  upload:
    runs-on: ubuntu-latest
    steps:
      - name: Create the file
        run: echo "Hi!" > hi.txt
      - name: Upload the file
        uses: actions/upload-artifact@6.0.0
        with:
          name: hi-artifact
          path: hi.txt
